	M_key := '-1';
	(* Deactivates keyboard * )
	Q_KB_COL1 := FALSE;
	Q_KB_COL2 := FALSE;
	Q_KB_COL3 := FALSE;
	M_Poll_Activation := FALSE;
END_IF; *)
</STSource>
